<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.csu.coderlee.dao.AccountMapper">

    <resultMap id="AccountMap" type="org.csu.coderlee.model.Account">
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="selectById" resultMap="AccountMap" parameterType="java.lang.Long">
        select
        *
        from account
        where id = 1
    </select>
    
    <insert id="inserd" parameterType="java.lang.Long">
        INSERT INTO learntest.account (username,password)values (#{username},#{password})
    </insert>

</mapper>